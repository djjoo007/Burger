<h1>Eat the Burger!</h1>

<div class="row">
<div class= "col-4">
<h2>Ready to Eat!</h2>
<ul>
  {{#each burgers}}
      {{#unless devoured}}
    {{> burgers/burger-block devour=false}}
        {{/unless}}
  {{/each}}
</ul>
</div>
<div class= "col-4"></div>
<div class= "col-4">
<h2>Eaten!</h2>
<ul>
  {{#each burgers}}
      {{#if devoured}}
    {{> burgers/burger-devoured devour=true}}
        {{/if}}
  {{/each}}
</ul>
</div>
</div>

<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="name">
    <button class = "btn btn-primary" type="submit">Add Burger</button>
  </div>

</form>
</div>
